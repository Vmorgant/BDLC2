<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:scrollbars="none"
android:background="@drawable/fond"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="ensim.bdlc.Activities.ActivityEditProfil">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fond_arrondi"
                    android:elevation="10dp"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="5dp">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:elevation="10dp"
                            android:gravity="center_vertical">

                                <EditText
                                    android:id="@+id/editText_num_etu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:elevation="10dp"
                                    android:hint="Numéro étudiant"
                                    android:inputType="textNoSuggestions"
                                    android:textColor="@color/second_color_clear"
                                    android:textSize="20sp" />

                        </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_scanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bouton_arrondi"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Scanner qrCode étudiant"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/button_scanner"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/icon_qr_code_white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bouton_arrondi"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal"
                            android:padding="15dp">

                                <Button
                                    android:id="@+id/button_neg"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/icon_neg" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/fond_arrondi"
                            android:elevation="10dp"
                            android:foregroundGravity="center_horizontal"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2"
                                    android:foregroundGravity="center_vertical|center_horizontal"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:orientation="horizontal">

                                        <EditText
                                            android:id="@+id/editText_montant"
                                            android:layout_width="wrap_content"

                                            android:layout_height="wrap_content"
                                            android:inputType="numberDecimal"
                                            android:maxLength="5"
                                            android:singleLine="true"
                                            android:text="00.0"
                                            android:textAlignment="textEnd"
                                            android:textAppearance="@style/TextAppearance.AppCompat"
                                            android:textSize="20sp" />

                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:elevation="2dp"
                                            android:text="€"
                                            android:textAppearance="@style/TextAppearance.AppCompat"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bouton_arrondi"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal"
                            android:padding="5dp">

                                <Button
                                    android:id="@+id/button_pos"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/icon_pos" />

                        </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/button_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bouton_arrondi"
                    android:elevation="10dp"
                    android:padding="18dp"
                    android:text="Recharger"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

        </LinearLayout>
</LinearLayout>