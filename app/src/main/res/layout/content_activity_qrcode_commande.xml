<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center_vertical|center_horizontal"
    android:gravity="center_vertical|center_horizontal"
    android:background="@drawable/fond"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ensim.bdlc.Activities.ActivityCommande"
    tools:showIn="@layout/activity_qrcode_commande">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:contentPadding="10dp"
        card_view:cardBackgroundColor="@color/white_fab_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_qrcode"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_idpanier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NumÃ©ro de commande : ..."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView_soldes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Il vous reste actuellement ..."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="..."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
